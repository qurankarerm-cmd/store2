{
  "name": "arabic-clay-store",
  "version": "1.0.0",
  "description": "Arabic Polymer Clay Handmade Store with Admin Dashboard",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run client:dev\" \"npm run admin:dev\" \"npm run server:dev\"",
    "client:dev": "cd client && npm run dev",
    "admin:dev": "cd admin-dashboard && npm run dev",
    "server:dev": "cd server && npm run dev",
    "build": "cd client && npm run build && cd ../admin-dashboard && npm run build",
    "start": "cd server && npm start",
    "docker:prod": "docker-compose up --build -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build -d",
    "docker:stop": "docker-compose down && docker-compose -f docker-compose.dev.yml down",
    "docker:clean": "docker-compose down -v --remove-orphans && docker-compose -f docker-compose.dev.yml down -v --remove-orphans",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f"
  },
  "keywords": ["arabic", "rtl", "ecommerce", "handmade", "polymer-clay"],
  "author": "A'mali bil-Teen",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}